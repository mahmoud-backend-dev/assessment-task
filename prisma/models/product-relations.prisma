model ProductRelated {
  productId        String  @db.Uuid @map("product_id")
  relatedProductId String  @db.Uuid @map("related_product_id")

  product        Product @relation(fields: [productId], references: [id])
  relatedProduct Product @relation("RelatedIn", fields: [relatedProductId], references: [id])

  @@id([productId, relatedProductId])
  @@map("product_related")
  @@schema("product_related")
}

